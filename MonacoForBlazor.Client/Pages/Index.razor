@page "/"

    <div class="app-component">
        <div @ref ="TextElement" @ref:suppressField>This is text.</div>
        <div>
            <button @onclick="@(async () => await CodeEditor.Focus())">Focus</button>
            <button @onclick="@(async () => Console.WriteLine(await CodeEditor.GetConfiguration()))">GetConfiguration</button>
            <button @onclick="@(async () => await CodeEditor.ApplyFontInfo(TextElement))">ApplyFontInfo</button>
        </div>
        <div class="editor-container">
            <CodeEditor @ref="CodeEditor" @ref:suppressField Options="@_options"></CodeEditor>
        </div>
    </div>

@code {
    private EditorOptions _options;
    CodeEditor CodeEditor;
    ElementReference TextElement;

    protected override void OnInitialized()
    {
        _options = new EditorOptions
        {
            Value = "// --- This is a comment",
            Language = "csharp",
            FontSize = 18,
            GotoLocation = new GoToLocationOptions
            {
                Multiple = "goto"
            }
        };
    }
}
